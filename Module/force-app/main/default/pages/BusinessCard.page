<apex:page >
    <apex:slds />
    <div class="slds-scope">
        <dl class="slds-dl_inline">
            <dt class="slds-dl_inline__label">First Name</dt>
            <dd class="slds-dl_inline__detail">{!$User.FirstName}</dd>
            <dt class="slds-dl_inline__label">Last Name</dt>
            <dd class="slds-dl_inline__detail">{!$User.LastName}</dd>
            <dt class="slds-dl_inline__label">Email</dt>
            <dd class="slds-dl_inline__detail">{!$User.Email}</dd>     
            <dt class="slds-dl_inline__label">Phone</dt>
            <dd class="slds-dl_inline__detail">{!$User.Phone}</dd>
            <dt class="slds-dl_inline__label">Title</dt>
            <dd class="slds-dl_inline__detail">{!$User.Title}</dd>        
        </dl>
        <!-- INPUT FIELD -->
        <div class="slds-form-element">
            <label class="slds-form-element__label slds-text-heading_medium 
                          slds-p-bottom_medium" for="text-input-id-1">Account Name:</label>
            <div class="slds-form-element__control">
                <input type="text" id="accountName" class="slds-input"> </input>
        </div>
    </div>
    <!-- / INPUT FIELD -->    
    <!-- BUTTON -->
    <!-- TO DO: Implement send email with business card info --> 
    <button class="slds-button_neutral slds-size_1-of-1 
                   slds-m-top_x-small slds-p-bottom_x-small slds-p-top_x-small" 
            onclick="createAccount()">Send
    </button>
    <!-- / BUTTON -->
	</div>
</apex:page>