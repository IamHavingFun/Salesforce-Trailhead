<aura:component controller="CampingListController">
    <!-- Initialize and load records from database -->
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    
    <!-- Add an attribute named items with the type of an array of camping item custom objects. -->
    <aura:attribute name="items" type="Camping_Item__c[]" />
    
    <lightning:card title="Camping List">
        <aura:iteration items="{!v.items}" var="item">
            <c:campingListItem item="{!item}"/>
        </aura:iteration>
    </lightning:card>
    
    <!-- Add an attribute named newItem of type Camping_Item__c with default quantity and price values of 0. -->
    <aura:attribute name="newItem" type="Camping_Item__c" 
                    default="{	'sobjectType': 'Camping_Item__c',
                             'Quantity__c': 0,
                             'Price__c': 0}"/>      
    
    <form class="slds-form--stacked">
        <lightning:input aura:id="campingitemform" label="Camping Item"
                         name="itemname"
                         value="{!v.newItem.Name}"
                         required="true"/> 
        <lightning:input aura:id="campingitemform" label="Quantity"
                         type="number"
                         name="itemquantity"
                         value="{!v.newItem.Quantity__c}"
                         min="1"/>
        <lightning:input aura:id="campingitemform" label="Price"
                         type="number"
                         formatter="currency"
                         name="itemprice"
                         min="0.1"
                         step="0.01"
                         value="{!v.newItem.Price__c}"/> 
        <lightning:input aura:id="campingitemform" label="Packed"
                         type="checkbox"
                         name="itempacked"
                         checked="{!v.newItem.Packed__c}"/>         
        <lightning:button label="Create Item" 
                          class="slds-m-top--medium"
                          onclick="{!c.clickCreateItem}"
                          />
    </form>    
</aura:component>